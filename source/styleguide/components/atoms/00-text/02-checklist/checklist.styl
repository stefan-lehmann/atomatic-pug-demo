.checklist
  list-style none
  margin 0
  padding 0

  &__item
    position relative
    padding 0 0 0 1.35em
    line-height 1.25em
    margin .65em 0 0
    &:first-child
      margin-top  0

  &__icon
    absolute(0, null, null, 0)
    height 1em

    .svg
      width 1em
      vertical-align baseline
      tintSvg($color-text-default)
