p
ol
ul
  display block
  margin-bottom 1em
  &:last-child
    margin-bottom 0

ol
ul
  margin-left 1.25em
  & &
    margin-top .5em

ol
  list-style-type decimal
  & &
    list-style-type lower-alpha

ul
  list-style-type disc
  & &
    list-style-type circle

li
  display list-item
  margin-bottom .5em
  &:last-child
    margin-bottom 0

strong, b
  font-weight 700

em, i, cite, dfn
  font-style oblique

u
  text-decoration underline

del, s
  text-decoration line-through

mark
  background $color-background-invert
  color $color-text-invert

a
  color inherit
  text-decoration none
  outline 0
  cursor pointer
  &:hover
  &:focus
    color inherit
    outline 0

  &[name]
    position absolute
    display block
    height 0
    width 0
    margin-top -100px

  p &
      background $color-link-background
      padding-left .2em
      padding-right @padding-left

.smaller
  font-size .8em
  line-height inherit
  display inline-block

.bigger
  font-size 1.5em
  line-height inherit

.unit
  font-size .75em
  opacity .5
